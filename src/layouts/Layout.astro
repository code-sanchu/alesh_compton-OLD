---
import "../styles/global.css";
export type Props = {
  pageTitle: string;
  preconnectYoutube?: boolean;
};

const { pageTitle, preconnectYoutube } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    {
      preconnectYoutube ? (
        <link rel="preconnect" href="https://www.youtube.com" />
      ) : null
    }
    <meta name="generator" content={Astro.generator} />
    <title>Alesh Compton - {pageTitle}</title>
    <meta name="description" content="Alesh Compton portfolio." />
  </head>
  <body>
    <slot />
  </body>
</html>

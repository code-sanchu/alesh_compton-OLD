---
import { Image } from "@astrojs/image/components";

import {
  getThumbnailFromYoutubeId,
  getYoutubeEmbedUrlFromId,
  getYoutubeVideoIdFromUrl,
} from "~helpers/youtube";
import { domain } from "~data/index";

import CloseIcon from "./CloseIcon.astro";
import PlayIcon from "./PlayIcon.astro";
import VolumeIcon from "./VolumeIcon.astro";

import type { YoutubeVideo } from "~types/index";

type Props = { isFirst: boolean } & YoutubeVideo;

// TODO: try remove controls param below
const { youtubeUrl, coverImage, isFirst } = Astro.props;

const youtubeId = getYoutubeVideoIdFromUrl(youtubeUrl)!;
const youtubeEmbedSrc = getYoutubeEmbedUrlFromId(youtubeId);
const youtubeThumbnailSrc = getThumbnailFromYoutubeId(youtubeId);

const youtubeIframeParams = `?enablejsapi=1&modestbranding=1&rel=0&color=white&frameborder=0&${
  import.meta.env.PROD ? domain : ""
}`;

const coverImageYPosition = coverImage?.yPosition || 50;
---

<div class="iframe-container media-transform">
  <div class="inner-container">
    <span class="bg-loading-text">Loading video...</span>
    <iframe
      id={youtubeId}
      class="iframe"
      src={youtubeEmbedSrc + youtubeIframeParams}
      loading={"lazy"}
      frameborder={0}
      allowfullscreen></iframe>
    <div id="close-button" class="close-button">
      <span>close</span>
      <CloseIcon />
    </div>
    <div id="volume-message" class="iframe-helper-overlay volume-message">
      <VolumeIcon />
      <span>use controls for volume</span>
    </div>
  </div>
  <div class="iframe-overlay">
    <div id="player-loading" class="player-loading">
      Connecting to youtube...
    </div>
    {
      coverImage ? (
        <Image
          class="iframe-img"
          src={coverImage.url}
          alt=""
          style={{
            objectPosition: `50% ${coverImageYPosition}%`,
          }}
          loading={isFirst ? "eager" : "lazy"}
          format="avif"
        />
      ) : (
        <Image
          class="iframe-img"
          src={youtubeThumbnailSrc}
          width={1600}
          aspectRatio="16:9"
          alt=""
          style={{
            objectPosition: `50% ${coverImageYPosition}%`,
          }}
          loading={isFirst ? "eager" : "lazy"}
          format="avif"
        />
      )
    }
    <div class="play-icon">
      <PlayIcon lineWidth={2} />
    </div>
  </div>
</div>

<style>
  .iframe-container {
    position: relative;
    height: 100%;
    max-height: 1000px;
    aspect-ratio: 16/9;
  }
  .inner-container {
    position: absolute;
    width: 100%;
    aspect-ratio: 16/9;
  }
  .iframe {
    z-index: 1;
    position: absolute;
    width: 100%;
    height: 100%;
    border: none;
  }
  /* will show when iframe image and video haven't loaded in */
  .bg-loading-text {
    position: absolute;
    left: 1em;
    top: 1em;
    font-size: small;
  }
  .iframe-overlay {
    z-index: 2;
    position: absolute;
    width: 100%;
    aspect-ratio: 16/9;
    transition: opacity ease-in-out 0.2s;
  }
  .iframe-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .player-loading {
    z-index: -1;
    opacity: 0;
    position: absolute;
    left: 2%;
    top: 2%;
    padding: 0.2em 0.5em;
    border-radius: 3px;
    transition: opacity 0.2s ease-in-out;
  }
  .iframe-helper-overlay {
    z-index: 2;
    position: absolute;
    background-color: black;
    color: white;
    text-transform: uppercase;
    padding: 0.2em 0.5em;
    border-radius: 3px;
    transition: opacity 0.2s ease-in-out;
    display: flex;
    align-items: center;
    gap: 0.5em;
    opacity: 0;
  }
  .close-button {
    text-transform: uppercase;
    position: absolute;
    z-index: 10;
    opacity: 1;
    right: 0;
    bottom: 0;
    transform: translateY(100%);
    font-size: small;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5em;
    backdrop-filter: blur(60px);
    background-color: hsla(360, 100%, 100%, 0.31);
    padding-left: 1em;
    border-radius: 3px;
  }
  .volume-message {
    bottom: 30%;
    left: 1%;
    max-width: 60%;
    white-space: wrap;
    cursor: default;
    pointer-events: none;
    background-color: black;
    color: white;
  }
  .play-icon {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 10%;
    aspect-ratio: 1;
    min-width: 20px;
  }

  .inner-container:hover .close-button {
    z-index: 10;
  }

  /*   @media (hover: hover) and (pointer: fine) {
    .inner-container:hover .close-button {
      z-index: 10;
    }
  } */

  @media screen and (max-width: 600px) {
    .volume-message {
      bottom: 45%;
    }
  }
</style>

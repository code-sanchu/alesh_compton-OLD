---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Media from "../components/MediaOld.astro";

import image1 from "../images/butterfly/1.jpg";
import image2 from "../images/butterfly/2.jpg";
import image3 from "../images/butterfly/3.jpg";
import image4 from "../images/butterfly/4.jpg";
import Layout from "../layouts/Layout.astro";

import "../styles/global.css";
import type { LocalImage, YoutubeVideo } from "../types";

type Props = {
  title: string;
  description?: string[];
  media: (LocalImage | YoutubeVideo)[];
};

const page = {
  title: "Transformation",
  description: [
    "The project culminated in an exhibition of the paintings in London, a weeklong public screening of the film in Tokyo and a hardback book, which is available for purchase here â€“ https://www.transformation-zine.com/",
  ],
  media: [
    {
      type: "youtube-video",
      youtubeUrl: "https://www.youtube.com/watch?v=QLW1FmWB_5I",
      coverImage: {
        url: image2,
        position: "top",
      },
    },
    {
      type: "youtube-video",
      youtubeUrl: "https://www.youtube.com/watch?v=t6Lj6hzrmtE",
    },
    /*     {
      type: "youtube-video",
      youtubeUrl: "https://www.youtube.com/watch?v=4fezP875xOQ&t=4543s",
    }, */
    { type: "image", url: image1 },
    { type: "image", url: image3 },
    { type: "image", url: image4 },
  ] as Props["media"],
};
---

<Layout pageTitle={page.title}>
  <div class="page-container">
    <Header />
    <div class="body-outer-container">
      <div class="body-inner-container">
        <div class="text-container">
          <p class="text">
            {page.title}
          </p>
          {
            page.description && (
              <p class="text description">
                {typeof page.description === "string"
                  ? page.description
                  : page.description.map((sentence) => <span>{sentence}</span>)}
              </p>
            )
          }
        </div>
        <Media media={page.media} />
      </div>
    </div>
    <Footer />
  </div>
</Layout>

<style>
  .page-container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    overflow: hidden;
    padding-left: 2.5vw;
  }
  .body-outer-container {
    flex-grow: 1;
    height: 100%;
    position: relative;
  }
  .body-inner-container {
    position: absolute;
    inset: 0;
    display: flex;
  }
  .text-container {
    margin-right: 58px;
  }
  .text {
    width: 405px;
  }
  .description {
    display: flex;
    flex-direction: column;
    margin-top: 1em;
  }
</style>
